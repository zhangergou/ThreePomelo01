<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/public_tatle_layout" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:clickable="false"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.weixingwang.threepomelo.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/home_frament_vp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        />
                    <LinearLayout
                        android:id="@+id/lin_home_fragment_indector"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/grayThree" />

                    <TextView
                        android:textSize="@dimen/text_size_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近的店铺" />

                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:background="@color/grayThree" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_fragment_recl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </com.weixingwang.threepomelo.view.MyScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>