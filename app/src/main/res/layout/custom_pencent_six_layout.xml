<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_fragment_percent_six_swrf"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="向日葵"
                android:gravity="center"
                android:textColor="@color/grayTwo"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="已激励"
                android:gravity="center"
                android:textColor="@color/grayTwo"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="日期"
                android:gravity="center"
                android:textColor="@color/grayTwo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.weixingwang.threepomelo.view.MyScrollView
            android:id="@+id/custom_fragment_percent_six_scro"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/custom_fragment_percent_six_recyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </com.weixingwang.threepomelo.view.MyScrollView>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>