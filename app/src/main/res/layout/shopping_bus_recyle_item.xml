<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginBottom="1dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:src="@mipmap/img"
                android:layout_height="80dp" />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/shop_bus_recycle_item_name"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="爆米花（虹口店）"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/grayThree"
                        android:layout_width="wrap_content"
                        android:text="单价："
                        android:textSize="14sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="￥6"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FE8FB3"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/grayThree"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:text="合计"
                        android:textSize="14sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:text="6"
                        android:textSize="15sp"
                        android:textColor="#FE8FB3"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="元"
                        android:textSize="15sp"
                        android:textColor="#FE8FB3"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:src="@drawable/shoppingcart_minus_button"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:text="1"
                            android:gravity="center"
                            android:background="@drawable/shoppingcart_frame_button"
                            android:layout_width="50dp"
                            android:layout_height="25dp" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:src="@drawable/shoppingcart_plus_button"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/shoppingcart_delete_button"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>